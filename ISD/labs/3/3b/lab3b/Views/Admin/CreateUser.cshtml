@model UserViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h2>Add user</h2>
<form asp-action="CreateUser" method="post">
    <div class="form-group">
        <label for="user-email">Name: </label>
        <input class="form-control" name="name" id="user-email" type="text" placeholder="Type name"/>
    </div>
    <div class="form-group">
        <label for="user-password">Password: </label>
        <input class="form-control" name="password" id="user-password" type="password" placeholder="Type password"/>
    </div>
    <button type="submit" class="btn btn-primary m-2">Add</button>
</form>
<div>
    <table class="table">
        <tr><th scope="col">#</th><th scope="col">Id</th><th scope="col">Name</th></tr>
        @{ var counter = 1; }
        @foreach (var user in @Model.userList)
        {
            <tr><td>@counter</td><td>@user.Id</td><td>@user.UserName</td></tr>
            counter++;
        }
    </table>
</div>

